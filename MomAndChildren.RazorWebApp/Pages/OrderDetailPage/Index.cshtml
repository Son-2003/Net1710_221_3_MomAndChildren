@page
@model MomAndChildren.RazorWebApp.Pages.OrderDetailPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form method="get">
        <div class="form-group" style="display: flex; align-items: center; margin-bottom: 20px">
            <label for="searchTerm">Search:</label>
            <input style="margin: 0 15px 0 10px" type="text" class="form-control" id="searchTerm" name="searchTerm" placeholder="Enter ProductName">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail.First().OrderDetailId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail.First().Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail.First().UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail.First().TotalPrice)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail.First().CreateBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail.First().CreateAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail.First().UpdateBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail.First().UpdateAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail.First().Order.OrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail.First().Product.ProductName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OrderDetail) {
        <tr>
            <td>
                 @Html.DisplayFor(modelItem => item.OrderDetailId)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.CreateBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdateAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.OrderId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.OrderDetailId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.OrderDetailId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.OrderDetailId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" href="@Url.Page("Index", new { currentPage = Model.CurrentPage - 1 })" tabindex="-1" aria-disabled="@(Model.CurrentPage == 1)">Previous</a>
        </li>
        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
            <a class="page-link" href="@Url.Page("Index", new { currentPage = Model.CurrentPage + 1 })">Next</a>
        </li>
    </ul>
</nav>
