@page
@model MomAndChildren.RazorWebApp.Pages.CategoryPage.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Status)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Category.Status == 1)
            {
                <span>Active</span>
            }
            @if (Model.Category.Status == 0)
            {
                <span>Inactive</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Image)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Image)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.Note)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Note)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.CreateBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CreateBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.CreateAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CreateAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.UpdateBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.UpdateBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category.UpdateAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.UpdateAt)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Category?.CategoryId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
