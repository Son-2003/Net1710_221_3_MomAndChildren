@page
@model MomAndChildren.RazorWebApp.Pages.PaymentPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Payment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Payment.PaymentId" />
            <div class="form-group">
                <label asp-for="Payment.PaymentMethod" class="control-label"></label>
                <input asp-for="Payment.PaymentMethod" class="form-control" />
                <span asp-validation-for="Payment.PaymentMethod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment.Status" class="control-label"></label>
                <select asp-for="Payment.Status" class="form-control" asp-items="ViewBag.StatusOptions"></select>
                <span asp-validation-for="Payment.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment.PaymentDate" class="control-label"></label>
                <input asp-for="Payment.PaymentDate" class="form-control" />
                <span asp-validation-for="Payment.PaymentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment.CreateAt" class="control-label"></label>
                <input asp-for="Payment.CreateAt" class="form-control" />
                <span asp-validation-for="Payment.CreateAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment.UpdateAt" class="control-label"></label>
                <input asp-for="Payment.UpdateAt" class="form-control" />
                <span asp-validation-for="Payment.UpdateAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment.Note" class="control-label"></label>
                <input asp-for="Payment.Note" class="form-control" />
                <span asp-validation-for="Payment.Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment.BillingAddress" class="control-label"></label>
                <input asp-for="Payment.BillingAddress" class="form-control" />
                <span asp-validation-for="Payment.BillingAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment.Currency" class="control-label"></label>
                <input asp-for="Payment.Currency" class="form-control" />
                <span asp-validation-for="Payment.Currency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment.OrderId" class="control-label"></label>
                <select asp-for="Payment.OrderId" class="form-control" asp-items="ViewBag.OrderId"></select>
                <span asp-validation-for="Payment.OrderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="col-md-12">
    <label>@Model.Message</label>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
